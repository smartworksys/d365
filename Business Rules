window.onload = function () {
    const dropdown = document.getElementById("drpAllStates");
    if (dropdown) {
        dropdown.style.height = "32px";
        dropdown.style.lineHeight = "32px";
        dropdown.style.marginTop = "0";

        // Adjust iframe height to fit nicely
        resizeIframe();
    }
};

function resizeIframe() {
    if (window.parent) {
        const iframe = window.frameElement;
        if (iframe) {
            iframe.style.height = "70px"; // Match typical field height + margin
            iframe.style.width = "100%";
        }
    }
}
