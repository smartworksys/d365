// Get calculated maturity option value from the form
const calculatedMaturityOption = formContext.getAttribute(CONSTANTS.VARIABLES.CALCULATED_MATURITY_OPTION)?.getValue();

// Helper: determine if option is Withdraw or Close
const isWithdrawOrClose =
    selectedMaturityOption === CONSTANTS.OPTION_SET_VALUES.WITHDRAW_FROM_CERT ||
    selectedMaturityOption === CONSTANTS.OPTION_SET_VALUES.CLOSE ||
    calculatedMaturityOption === CONSTANTS.OPTION_SET_VALUES.WITHDRAW_FROM_CERT;

// Rule 1: Withdraw/Close cert IRA without affiliate IRA
if (isWithdrawOrClose && !isAfflAcctIRA && isCertAcctIRA) {
    shouldSetManualReview = true;
}
