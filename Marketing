function disableIframeControls(executionContext) {
    var formContext = executionContext.getFormContext();

    // Get the iframe control (replace 'IFRAME_customhtml' with your iframe's name)
    var iframeControl = formContext.getControl("IFRAME_customhtml");

    if (!iframeControl) return;

    // Wait for iframe to fully load before accessing DOM
    var iframe = iframeControl.getObject();

    iframe.onload = function () {
        var iframeDocument = iframe.contentWindow.document;

        // Disable all inputs, selects, and buttons inside the iframe
        var elements = iframeDocument.querySelectorAll("input, select, button, textarea");

        elements.forEach(function (el) {
            el.disabled = true;
        });
    };
}
