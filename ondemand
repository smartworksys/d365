using System;
using System.Net;

class Program
{
    static void Main()
    {
        string ip_address = "8.8.8.8"; // Example IP address (Google's DNS server)
        try
        {
            IPHostEntry host = Dns.GetHostEntry(ip_address);
            Console.WriteLine($"The hostname for IP address {ip_address} is {host.HostName}");
        }
        catch (SocketException)
        {
            Console.WriteLine("No host name associated with the IP address found.");
        }
    }
}
