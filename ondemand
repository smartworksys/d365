// JavaScript function to enable/disable a field based on the selected value in a choice field
function onChangeChoiceField(executionContext) {
    var formContext = executionContext.getFormContext();
    
    // Retrieve the value of the choice field
    var choiceValue = formContext.getAttribute("nf1pbm_amountto").getValue();

    // Check if the selected value is either 582860001 or 582860002
    var isEnabled = (choiceValue === 582860001 || choiceValue === 582860002);

    // Enable or disable the Yes/No field based on the condition
    formContext.getControl("enableDisableField").setDisabled(!isEnabled);
}
