function checkFormMode(executionContext) {
    var formContext = executionContext.getFormContext();
    
    // Retrieve the form type
    var formType = formContext.ui.getFormType();

    // Check if the form is in Create mode (1) or Edit mode (2)
    if (formType === 1) {
        console.log("Form is in Create mode.");
        // Perform actions specific to Create mode
    } else if (formType === 2) {
        console.log("Form is in Edit mode.");
        // Perform actions specific to Edit mode
    }
}
