function manipulateIframeFields(executionContext) {
    var formContext = executionContext.getFormContext();
    
    // Access the iframe control by its logical name (replace 'IFRAME_myiframe' with the actual name)
    var iframeControl = formContext.getControl("IFRAME_myiframe");

    if (iframeControl) {
        // Access the HTML iframe element
        var iframeElement = iframeControl.getObject();

        // Ensure the iframe is loaded
        iframeElement.onload = function() {
            // Access the iframe's content window
            var iframeContentWindow = iframeElement.contentWindow;

            if (iframeContentWindow) {
                // Now that the iframe is loaded, access a specific field inside the iframe by its ID
                var fieldToHide = iframeContentWindow.document.getElementById("fieldId"); // Replace "fieldId" with the actual ID

                if (fieldToHide) {
                    // Hide the field inside the iframe
                    fieldToHide.style.display = "none"; // Hide the element
                } else {
                    console.error("Field with the specified ID not found inside the iframe.");
                }
            } else {
                console.error("Unable to access the content window of the iframe.");
            }
        };
    } else {
        console.error("Iframe control not found.");
    }
}
