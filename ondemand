function openNewFormWithoutSavePrompt(executionContext) {
    var formContext = executionContext.getFormContext();
    
    // Clear all fields on the form to remove the dirty state
    formContext.data.entity.attributes.forEach(function (attribute) {
        attribute.setValue(null);
        attribute.setSubmitMode("never"); // This ensures that the form does not attempt to save this field
    });

    // Mark the form as not dirty, so it doesn't prompt for saving
    formContext.data.setFormDirty(false);

    // Open a new form for the same entity
    var entityName = formContext.data.entity.getEntityName();
    Xrm.Utility.openEntityForm(entityName, null); // Open a new form for the entity
}
