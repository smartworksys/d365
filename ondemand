function toggleLookupReadOnly(executionContext, isReadOnly) {
    var formContext = executionContext.getFormContext();

    // Replace 'lookupFieldName' with the schema name of your lookup field
    var lookupField = formContext.getControl("lookupFieldName");

    if (lookupField) {
        if (isReadOnly) {
            lookupField.setDisabled(true); // Make the field read-only
        } else {
            lookupField.setDisabled(false); // Make the field editable
        }
    } else {
        console.log("Lookup field not found.");
    }
}
