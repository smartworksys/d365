function validateFieldOnSave(executionContext) {
    // Get the form context
    var formContext = executionContext.getFormContext();

    // Get the field value by its schema name
    var fieldValue = formContext.getAttribute("new_customfield").getValue();

    // Check if the field is empty
    if (fieldValue === null || fieldValue === "") {
        // Display an alert dialog with title "Error" and a message
        var alertStrings = { 
            confirmButtonLabel: "OK", 
            text: "The 'Custom Field' is required. Please fill it before saving.", 
            title: "Error" 
        };
        var alertOptions = { height: 120, width: 260 };

        Xrm.Navigation.openAlertDialog(alertStrings, alertOptions);

        // Prevent the save operation
        executionContext.getEventArgs().preventDefault();
    }
}
