async function getEnvironmentVariable(variableName) {
    var query = `?$select=defaultvalue,displayname&$filter=schemaname eq '${variableName}'&$expand=environmentvariablevalue`;
    var result = await Xrm.WebApi.online.retrieveMultipleRecords("environmentvariabledefinition", query);
    if (result.entities.length > 0 && result.entities[0].environmentvariablevalue && result.entities[0].environmentvariablevalue.length > 0) {
        return result.entities[0].environmentvariablevalue[0].value;
    } else {
        throw new Error("Environment variable not found.");
    }
}
