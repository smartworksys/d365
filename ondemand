function getFieldValueFromQuickViewForm() {
    // Get the Quick View control by name
    var quickViewControl = Xrm.Page.getControl("quickViewControlName"); // Replace with your Quick View Control Name

    // Check if the Quick View form is loaded
    if (quickViewControl && quickViewControl.getAttribute() && quickViewControl.getAttribute().getValue() != null) {

        // Get the field value from the Quick View form
        var accountName = quickViewControl.getAttribute().getValue().attributes.getByName("name").getValue(); // Replace 'name' with the schema name of the field

        // Check if the value is not null
        if (accountName != null) {
            console.log("Account Name from Quick View: " + accountName);
        } else {
            console.log("Account Name field is empty.");
        }
    } else {
        console.log("Quick View form is not loaded or no data available.");
    }
}
