function conditionallyHideIframeFields(executionContext) {
    var formContext = executionContext.getFormContext();
    
    // Access the iframe control
    var iframeControl = formContext.getControl("IFRAME_myiframe");

    if (iframeControl) {
        var iframeContentWindow = iframeControl.getObject().contentWindow;

        if (iframeContentWindow) {
            // Example: Condition based on a value from the parent form
            var status = formContext.getAttribute("statuscode").getValue();

            // Example: Hide a specific field in the iframe if status is not active (status code is 1)
            var fieldToHide = iframeContentWindow.document.getElementById("fieldId");
            
            if (fieldToHide) {
                if (status !== 1) {
                    fieldToHide.style.display = "none"; // Hide the field if condition is met
                } else {
                    fieldToHide.style.display = "block"; // Show the field otherwise
                }
            }
        }
    }
}
