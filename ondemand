function showFormNotification(executionContext, message, level) {
    var formContext = executionContext.getFormContext(); // Get the form context

    // level could be "ERROR", "WARNING", or "INFO"
    formContext.ui.setFormNotification(message, level, "notificationId");

    // Optionally, clear the notification after a delay
    setTimeout(function() {
        formContext.ui.clearFormNotification("notificationId");
    }, 10000); // Clears after 10 seconds
}

function validateBusinessLogic(executionContext) {
    // Example condition check
    if (/* your condition here */) {
        // Call to show notification
        showFormNotification(executionContext, "Your custom message here", "ERROR");
    } else {
        // Logic when conditions are met or cleared
        executionContext.getFormContext().ui.clearFormNotification("notificationId");
    }
}
