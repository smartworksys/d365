function getAttributeValue(executionContext) {
    var formContext = executionContext.getFormContext();
    var quickViewControl = formContext.ui.quickForms.get("<QuickViewControlName>"); // Replace with your Quick View Control Name

    if (quickViewControl) {
        if (quickViewControl.isLoaded()) {
            // Retrieve the value of a specific text box field by its schema name
            var textBoxValue = quickViewControl.getControl().find(control => control.getName() == "<AttributeSchemaName>").getAttribute().getValue(); // Replace with the actual attribute schema name

            if (textBoxValue != null) {
                console.log("Text Box Value from Quick View:", textBoxValue);
                return textBoxValue;
            } else {
                console.log("Text Box field in Quick View is empty.");
                return null;
            }
        } else {
            // Wait for a short period and then check again if the Quick View form is loaded
            setTimeout(getAttributeValue, 500, executionContext); // Adjust the delay as needed
        }
    } else {
        console.log("No data to display in the quick view control or the control was not found.");
        return null;
    }
}
