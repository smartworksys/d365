function getOptionSetValue(executionContext, fieldName) {
    var formContext = executionContext.getFormContext(); // Get the form context
    var optionSetField = formContext.getAttribute(fieldName);

    if (optionSetField) {
        var optionSetValue = optionSetField.getValue(); // Returns the integer value of the selected option
        return optionSetValue;
    } else {
        console.error("Field not found or not an option set");
        return null; // Field not found or not an option set
    }
}
