function onAnotherFinInstitutionChange(executionContext) {
    try {
        var formContext = executionContext.getFormContext();
        var byCheckoptionSetValue = formContext.getAttribute("nf1pbm_bycheck").getValue();
        
        try {
            if (byCheckoptionSetValue) {
                formContext.getAttribute("nf1pbm_anotherfininstitution").setValue(false);
            }
        } catch (innerError) {
            console.error("Error setting 'nf1pbm_anotherfininstitution': ", innerError);
        }

        try {
            var val = getSelectedOptionSetValue(executionContext);
            console.log("Selected Value: " + val);

            if (val) {
                showHideTabs(formContext, "pb_maturity_Instruction", "maturity_Instruction_Another_Fin", true);
                formContext.getAttribute(CONSTANTS.ATTRIBUTE_NAMES.MANUAL_REVIEW).setValue(true);
                onManualReviewChange(executionContext);
            } else {
                showHideTabs(formContext, "pb_maturity_Instruction", "maturity_Instruction_Another_Fin", false);
            }
        } catch (innerError) {
            console.error("Error processing maturity instruction logic: ", innerError);
        }

        try {
            var fields = [
                "nf1pbm_bankname",
                "nf1pbm_otheraddressline1",
                "nf1pbm_othercity",
                "nf1pbm_otherstate",
                "nf1pbm_otherzip"
            ];

            fields.forEach(function (field) {
                try {
                    if (val) {
                        formContext.getAttribute(field).setRequiredLevel("required");
                    } else {
                        formContext.getAttribute(field).setRequiredLevel("none");
                    }
                } catch (fieldError) {
                    console.error(`Error setting required level for field '${field}': `, fieldError);
                }
            });
        } catch (innerError) {
            console.error("Error setting field required levels: ", innerError);
        }

        // Uncomment if necessary
        // formContext.getAttribute("nf1pbm_uspostal").fireOnChange();

    } catch (error) {
        console.error("Error in onAnotherFinInstitutionChange: ", error);
    }
}
