function formatAddress(executionContext) {
    // Get the form context
    var formContext = executionContext.getFormContext();

    // Get field values (assuming field names are street, city, state, and zip)
    var street = formContext.getAttribute("street_field_name").getValue();
    var city = formContext.getAttribute("city_field_name").getValue();
    var state = formContext.getAttribute("state_field_name").getValue();
    var zip = formContext.getAttribute("zip_field_name").getValue();

    // Build the formatted address string with new lines
    var formattedAddress = (street ? street + "\n" : "") +
                           (city ? city + ", " : "") +
                           (state ? state + " " : "") +
                           (zip ? zip : "");

    // Set the formatted address in the multi-line text box
    formContext.getAttribute("multiline_textbox_field_name").setValue(formattedAddress);
}
