function getMemberAge(formContext, dateOfBirth) {
    // 1. Parse DOB
    const dob = typeof dateOfBirth === "string"
        ? new Date(dateOfBirth)
        : new Date(dateOfBirth);

    if (isNaN(dob)) {
        console.error("Invalid dateOfBirth:", dateOfBirth);
        return false;
    }

    // 2. Compute threshold = DOB + 59 years + 6 months
    const threshold = new Date(dob);
    threshold.setFullYear(threshold.getFullYear() + 59);
    threshold.setMonth(threshold.getMonth() + 6);

    // 3. Today's date (date-only)
    const now = new Date();
    const today = new Date(now.getFullYear(), now.getMonth(), now.getDate());

    // 4. Compare today's date with threshold
    return today >= threshold;
}

