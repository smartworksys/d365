function fmtMin() {
  return isPercentMode 
    ? `${MIN_VALUE.toFixed(2)}%` 
    : `$${MIN_VALUE.toFixed(2)}`;
}

function fmtZero() {
  return isPercentMode 
    ? `0.00%` 
    : `$0.00`;
}

function fill(msg) {
  return msg
    .replaceAll("XX.XX", fmtMin())
    .replaceAll("0.00", fmtZero());
}
