  <entity name="contact">
    <attribute name="fullname" />
    <attribute name="emailaddress1" />
    <attribute name="telephone1" />
    <link-entity name="account" from="accountid" to="parentcustomerid" link-type="inner" alias="account">
      <attribute name="name" />
    </link-entity>
  </entity>
</fetch>
{% endfetchxml %}

